-- // MOBILE MOTION-BASED ACCEL (ANTI-W KEY) //
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local LocalPlayer = Players.LocalPlayer
local PlayerGui = LocalPlayer:WaitForChild("PlayerGui")

_G.AccelEnabled = false
_G.MaxPower = 400 
_G.CurrentSpeed = 0 

-- // UI SETUP //
local ScreenGui = Instance.new("ScreenGui", PlayerGui)
ScreenGui.Name = "AccelGui"
local Btn = Instance.new("TextButton", ScreenGui)
Btn.Size = UDim2.new(0, 150, 0, 50)
Btn.Position = UDim2.new(0.05, 0, 0.4, 0)
Btn.Text = "ACCEL: OFF"
Btn.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
Btn.TextColor3 = Color3.new(1, 1, 1)
Btn.Font = Enum.Font.SourceSansBold
Btn.TextSize = 20
Instance.new("UICorner", Btn)

Btn.Activated:Connect(function()
    _G.AccelEnabled = not _G.AccelEnabled
    Btn.Text = "ACCEL: " .. (_G.AccelEnabled and "ON" or "OFF")
    Btn.BackgroundColor3 = _G.AccelEnabled and Color3.fromRGB(0, 200, 255) or Color3.fromRGB(30, 30, 30)
    if not _G.AccelEnabled then _G.CurrentSpeed = 0 end
end)

-- // LOGIKA DETEKSI GERAKAN FISIK //
RunService.Heartbeat:Connect(function()
    if _G.AccelEnabled then
        local char = LocalPlayer.Character
        local hum = char and char:FindFirstChildOfClass("Humanoid")
        local seat = hum and hum.SeatPart
        
        if seat and seat:IsA("VehicleSeat") then
            -- Cek apakah mobil bergerak secara fisik (Anda tekan gas mobile)
            -- Magnitude > 1 artinya mobil mulai jalan sedikit
            local isMovingPhysically = seat.AssemblyLinearVelocity.Magnitude > 1
            
            if isMovingPhysically then
                -- Menambah kecepatan secara bertahap
                if _G.CurrentSpeed < _G.MaxPower then
                    _G.CurrentSpeed = _G.CurrentSpeed + 2.5 
                end
                
                -- Tentukan arah gerak (Maju atau Mundur) berdasarkan arah velocity saat ini
                local dotProduct = seat.CFrame.LookVector:Dot(seat.AssemblyLinearVelocity.Unit)
                local direction = dotProduct > 0 and 1 or -1
                
                -- Berikan dorongan ekstra (Tanpa mengganggu gravitasi Y)
                local forwardVel = seat.CFrame.LookVector * (direction * _G.CurrentSpeed)
                seat.AssemblyLinearVelocity = Vector3.new(forwardVel.X, seat.AssemblyLinearVelocity.Y, forwardVel.Z)
            else
                -- Jika mobil diam (tidak tekan gas), turunkan boost perlahan
                _G.CurrentSpeed = math.max(0, _G.CurrentSpeed - 10)
            end
        else
            _G.CurrentSpeed = 0
        end
    end
end)
