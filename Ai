-- // HYBRID GAS MOD (2026) //
-- // Metode: Paksa Velocity + Kendali Stir Manual //

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local LocalPlayer = Players.LocalPlayer

_G.AccelEnabled = false
_G.Power = 400 -- Angka kecepatan yang tadi berhasil (atur di sini)

local ScreenGui = Instance.new("ScreenGui", game:GetService("CoreGui"))
local Btn = Instance.new("TextButton", ScreenGui)
Btn.Size = UDim2.new(0, 150, 0, 50)
Btn.Position = UDim2.new(0.05, 0, 0.4, 0)
Btn.Text = "GAS MOD: OFF"
Btn.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
Btn.TextColor3 = Color3.new(1, 1, 1)
Instance.new("UICorner", Btn)

Btn.MouseButton1Click:Connect(function()
    _G.AccelEnabled = not _G.AccelEnabled
    Btn.Text = "GAS MOD: " .. (_G.AccelEnabled and "ON" or "OFF")
    Btn.BackgroundColor3 = _G.AccelEnabled and Color3.fromRGB(0, 255, 100) or Color3.fromRGB(30, 30, 30)
end)

RunService.Heartbeat:Connect(function()
    if _G.AccelEnabled then
        local char = LocalPlayer.Character
        local hum = char and char:FindFirstChildOfClass("Humanoid")
        
        if hum and hum.SeatPart and hum.SeatPart:IsA("VehicleSeat") then
            local seat = hum.SeatPart
            
            -- KUNCI PENGENDALIAN:
            -- Hanya bekerja jika Anda menekan tombol gas di layar tablet (Throttle)
            if seat.Throttle ~= 0 then
                -- seat.CFrame.LookVector: Mengikuti arah moncong mobil (Bisa disetir)
                -- seat.Throttle: Mengikuti gas maju/mundur dari jempol Anda
                seat.AssemblyLinearVelocity = seat.CFrame.LookVector * (seat.Throttle * _G.Power)
            else
                -- Jika gas dilepas, biarkan rem/gesekan alami game yang bekerja
                -- Ini agar mobil tidak meluncur terus tanpa henti
            end
        end
    end
end)
      
