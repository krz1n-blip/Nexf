-- // SMOOTH MOBILE ACCEL (STABLE VERSION) //
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local LocalPlayer = Players.LocalPlayer

_G.AccelEnabled = false
_G.MaxPower = 350 
_G.CurrentSpeed = 0 

-- GUI Setup (Tetap sama)
local ScreenGui = Instance.new("ScreenGui", game:GetService("CoreGui"))
local Btn = Instance.new("TextButton", ScreenGui)
Btn.Size = UDim2.new(0, 150, 0, 50)
Btn.Position = UDim2.new(0.05, 0, 0.4, 0)
Btn.Text = "ACCEL MOD: OFF"
Btn.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
Btn.TextColor3 = Color3.new(1, 1, 1)
Instance.new("UICorner", Btn)

Btn.MouseButton1Click:Connect(function()
    _G.AccelEnabled = not _G.AccelEnabled
    Btn.Text = "ACCEL MOD: " .. (_G.AccelEnabled and "ON" or "OFF")
    Btn.BackgroundColor3 = _G.AccelEnabled and Color3.fromRGB(0, 200, 255) or Color3.fromRGB(30, 30, 30)
    if not _G.AccelEnabled then _G.CurrentSpeed = 0 end
end)

RunService.Heartbeat:Connect(function()
    if _G.AccelEnabled then
        local char = LocalPlayer.Character
        local hum = char and char:FindFirstChildOfClass("Humanoid")
        
        if hum and hum.SeatPart and hum.SeatPart:IsA("VehicleSeat") then
            local seat = hum.SeatPart
            
            -- Cek input gas
            if seat.Throttle ~= 0 then
                -- Akselerasi lebih halus
                if _G.CurrentSpeed < _G.MaxPower then
                    _G.CurrentSpeed = _G.CurrentSpeed + 1.5 
                end
                
                -- PERBAIKAN UTAMA:
                -- Kita hanya mengubah kecepatan Horizontal (X, Z), biarkan Y (Gravitasi) tetap asli
                local forwardVel = seat.CFrame.LookVector * (seat.Throttle * _G.CurrentSpeed)
                local currentY = seat.AssemblyLinearVelocity.Y -- Ambil gravitasi saat ini
                
                seat.AssemblyLinearVelocity = Vector3.new(forwardVel.X, currentY, forwardVel.Z)
            else
                -- Deselerasi saat lepas gas
                _G.CurrentSpeed = math.max(0, _G.CurrentSpeed - 3)
            end
        end
    end
end)
