-- // MOBILE ACCEL BOOST 2026 //
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local LocalPlayer = Players.LocalPlayer

-- // 1. VARIABEL KONTROL
_G.AccelEnabled = false
_G.BoostPower = 2.5 -- Kekuatan tambahan saat gas ditekan
_G.MaxSpeedLimit = 600 -- Batas kecepatan maksimal baru

-- // 2. GUI SETUP (Disesuaikan untuk Layar Tablet)
local ScreenGui = Instance.new("ScreenGui", game:GetService("CoreGui"))
ScreenGui.ResetOnSpawn = false

local MainFrame = Instance.new("Frame")
MainFrame.Parent = ScreenGui
MainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
MainFrame.Size = UDim2.new(0, 160, 0, 100)
MainFrame.Position = UDim2.new(0.05, 0, 0.2, 0) -- Posisi kiri atas agar tidak ganggu jempol
MainFrame.Active = true
MainFrame.Draggable = true
Instance.new("UICorner", MainFrame)

local AccelBtn = Instance.new("TextButton")
AccelBtn.Parent = MainFrame
AccelBtn.Size = UDim2.new(0.9, 0, 0, 60)
AccelBtn.Position = UDim2.new(0.05, 0, 0.2, 0)
AccelBtn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
AccelBtn.Text = "ACCEL: OFF"
AccelBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
AccelBtn.Font = Enum.Font.FredokaOne
AccelBtn.TextSize = 20
Instance.new("UICorner", AccelBtn)

-- // 3. LOGIKA AKSELERASI TABLET
AccelBtn.MouseButton1Click:Connect(function()
    _G.AccelEnabled = not _G.AccelEnabled
    AccelBtn.Text = "ACCEL: " .. (_G.AccelEnabled and "ON" or "OFF")
    AccelBtn.BackgroundColor3 = _G.AccelEnabled and Color3.fromRGB(0, 180, 100) or Color3.fromRGB(50, 50, 50)
end)

RunService.Heartbeat:Connect(function()
    if _G.AccelEnabled then
        local char = LocalPlayer.Character
        if char and char:FindFirstChild("Humanoid") then
            local seat = char.Humanoid.SeatPart
            
            -- Pastikan Anda sedang duduk di kursi kemudi
            if seat and seat:IsA("VehicleSeat") then
                -- Bypass limit standar mobil
                seat.MaxSpeed = _G.MaxSpeedLimit
                
                -- Cek apakah jempol Anda menekan Gas di layar (Throttle != 0)
                if seat.Throttle ~= 0 then
                    -- Memberikan tambahan dorongan fisik sesuai arah mobil
                    -- Ini akan membuat akselerasi terasa bertambah terus selama ditekan
                    local currentVelocity = seat.AssemblyLinearVelocity
                    if currentVelocity.Magnitude < _G.MaxSpeedLimit then
                        seat.AssemblyLinearVelocity = currentVelocity + (seat.CFrame.LookVector * seat.Throttle * _G.BoostPower)
                    end
                end
            end
        end
    end
end)
